<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="myPoemDetail"
            type="com.example.kurdpoem.model.PoemDetailModel" />
    </data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:loadImagePoem="@{myPoemDetail.link_img}"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_margin="12dp"
        app:riv_corner_radius="8dp"
        android:layout_gravity="right"
        android:elevation="8dp"
        android:scaleType="centerCrop"/>


    <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="right"
           android:text="ناو : "
           android:textSize="16sp"
           android:textColor="@color/black"
           android:fontFamily="@font/nrt"
           android:layout_marginRight="150dp"
           android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:maxLines="2"
        android:text="@{myPoemDetail.name , default = هەژار}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/nrt"
        android:layout_marginRight="190dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="ناسناو : "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nrt"
        android:layout_marginRight="150dp"
        android:layout_marginTop="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@{myPoemDetail.surname , default = کورد}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/nrt"
        android:layout_marginRight="210dp"
        android:layout_marginTop="45dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="لە دایکبوون : "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nrt"
        android:layout_marginRight="150dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@{myPoemDetail.birth , default = 1900}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/nrt"
        android:layout_marginRight="245dp"
        android:layout_marginTop="80dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="مردن  : "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nrt"
        android:layout_marginRight="150dp"
        android:layout_marginTop="115dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@{myPoemDetail.death , default = 1900}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/nrt"
        android:layout_marginRight="210dp"
        android:layout_marginTop="115dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="150dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/primary_red"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="ژیاننامە "
                android:textSize="16sp"
                android:layout_marginRight="45dp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nrt"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:gravity="right"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/expandable">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{myPoemDetail.more , default = هگللژادفاسدفادسفاسدف}"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ir_sans_b" />

    </LinearLayout>











</androidx.cardview.widget.CardView>

</layout>