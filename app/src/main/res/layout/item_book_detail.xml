<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <data>
        
        <variable
            name="myDetailBooks"
            type="com.example.kurdpoem.model.BookDetailModel" />
    </data>

<androidx.cardview.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بەرهەمی : "
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ir_sans_b"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="right"
        android:layout_marginRight="95dp"
        android:text="@{myDetailBooks.poem , default = هەژار}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/ir_sans_b"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="قاڵب : "
        android:layout_marginTop="50dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ir_sans_b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_gravity="right"
        android:layout_marginRight="65dp"
        android:text="@{myDetailBooks.type , default = شیعر}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/ir_sans_b"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ساڵی بڵاوبوونەوە : "
        android:layout_marginTop="90dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ir_sans_b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_gravity="right"
        android:layout_marginRight="145dp"
        android:text="@{myDetailBooks.year , default = 1990}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/ir_sans_b"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="زاراوە : "
        android:layout_marginTop="130dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ir_sans_b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_gravity="right"
        android:layout_marginRight="60dp"
        android:text="@{myDetailBooks.lang , default = سۆرانی}"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/ir_sans_b"/>







</androidx.cardview.widget.CardView>
</layout>